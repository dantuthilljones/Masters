<xml>
    <proxy>
        <group>sources</group>
        <name>PeanoReader</name>
        <label>Peano reader</label>
        <documentation>
            <brief>Read a single Peano file.</brief>
            <long>
          The Peano reader reads Peano data file.
      </long>
        </documentation>
        <property>
            <name>FileName</name>
            <label>FileName</label>
            <documentation>
                <brief/>
                <long>
            This property specifies the file name for the Peano reader.
        </long>
            </documentation>
            <defaults/>
            <domains>
                <domain>
                    <text> The value(s) must be a filename (or filenames).</text>
                </domain>
            </domains>
        </property>
        <property>
            <name>TimestepValues</name>
            <label>TimestepValues</label>
            <documentation>
                <brief/>
                <long>
            Available timestep values.
        </long>
            </documentation>
            <defaults/>
            <domains/>
        </property>
        <property>
            <name>ResolutionInfo</name>
            <label>ResolutionInfo</label>
            <defaults/>
            <domains/>
        </property>
        <property>
            <name>Resolution</name>
            <label>Resolution</label>
            <documentation>
                <brief/>
                <long>Load the grid with the given dimensions. Any arrays that
        conform to these dimensions will be loaded.</long>
            </documentation>
            <defaults/>
            <domains>
                <domain>
                    <text>The value(s) can be one of the following:</text>
                    <list/>
                </domain>
            </domains>
        </property>
        <ReaderFactory extensions="peano-patch-file" file_description="Peano Patch File Format"/>
    </proxy>
    <categoryindex>
        <label>Readers</label>
        <item proxy_name="PeanoReader" proxy_group="sources"/>
    </categoryindex>
</xml>
